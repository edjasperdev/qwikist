<!DOCTYPE html>
<html>
<head>
  <title>Qwikist</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if member_signed_in? %>
	Logged in as <strong><%= current_member.name %></strong> 
	<%=link_to "Logout", destroy_member_session_path, method: :delete%>
<% elsif provider_signed_in? %>
	Logged in as <strong><%= current_provider.name %></strong> 
	<%=link_to "Logout", destroy_provider_session_path, method: :delete%>
<% else %>
	<%=link_to "Login/SignUp", welcome_new_path%>
<% end %>

	<% flash.each do |name, msg| %>
  	<%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>

<%= yield %>

</body>
</html>
